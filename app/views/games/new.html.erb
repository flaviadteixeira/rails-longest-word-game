<h1>New Game</h1>
<div><% @letters.each do |letter|%>
  <p class="letters"><%=letter%></p>
  <% end %>
</div>

<form action="score" method="post">
  <input type="text" name="word" placeholder="Put your word in here">
  <input type="submit" class="btn" value= "Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>

